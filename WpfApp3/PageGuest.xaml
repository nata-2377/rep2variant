<Page x:Class="WpfApp3.PageGuest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageGuest">

    <Grid>
        <Label Content="Вы зашли как Гость" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="15" Width="181"/>
        <ScrollViewer>
        <StackPanel Orientation="Vertical" >
                <TextBox Name="TxtSearch" Width="700" Height="25" Margin="30" />
                <ListBox Name="ListProduct" Background="Transparent" Width="650" BorderBrush="Transparent"/>
            
            </StackPanel>
            
            
            
        </ScrollViewer>
    </Grid>
</Page>
